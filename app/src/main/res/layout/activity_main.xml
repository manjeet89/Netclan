<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#143b59"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refine"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="23dp" />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Select Your Availability"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textColor="#313e4d"
                />

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/filledTextField"-->
<!--                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->

<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:hint="Please Select One">-->

<!--                &lt;!&ndash;this is the actual edit text which takes the input&ndash;&gt;-->
<!--                <Spinner-->
<!--                    android:id="@+id/edit_text"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"-->
<!--                    android:layout_height="match_parent" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->


            <Spinner

                android:id="@+id/edit_text"
                android:padding="15dp"
                android:background="@drawable/whitecolor"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add Your Status"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textColor="#313e4d"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filledTextField1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text1"
                    android:background="@drawable/whitecolor"
                    android:layout_width="match_parent"
                    android:maxLength="250"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="0/250"
                android:textColor="@color/black"
                android:fontFamily="serif"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Select Hyper Local Distance"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textColor="#313e4d"

                />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="20"
                android:valueFrom="0"
                android:valueTo="100" />

            <RelativeLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >

                <TextView
                    android:id="@+id/pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:text="1 KM"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/white"
                    android:text="100 KM"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"/>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Select Purpose"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textColor="#313e4d"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/coffee"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Coffee"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_curve"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/business"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Business"
                    app:cornerRadius="48dp"
                    android:textSize="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:background="@drawable/button_curve"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/hobbies"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Hobbies"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/button_curve"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/friendship"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Friendship"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_curve"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/movies"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Movies"
                    app:cornerRadius="48dp"
                    android:textSize="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:background="@drawable/button_curve"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dinning"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Dinning"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/button_curve"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dating"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Dating"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:background="@drawable/button_curve"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/matrimony"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Matrimony"
                    app:cornerRadius="48dp"
                    android:textSize="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:background="@drawable/button_curve"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="5dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Save &amp; Explore"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/curve_shap"
                />

        </LinearLayout>
















</LinearLayout>