<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="20dp"
        android:background="@drawable/whitecolor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"
            android:layout_gravity="right"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poonam Verma"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indore, Within 13.8KM"
            android:layout_marginStart="100dp"
            android:textColor="#67706d"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="15dp"/>

<!--        <ProgressBar-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginStart="100dp"-->
<!--            style="?android:attr/progressBarStyleHorizontal"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="20dp"-->
<!--            android:id="@+id/progress"-->
<!--            android:progressBackgroundTint="@color/black"-->
<!--            android:layout_marginEnd="120dp"-->
<!--            android:background="@drawable/whitecolor"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:max="100"-->
<!--            android:progress="45"/>-->

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:max="100"
            android:layout_marginEnd="120dp"
            android:progress="0"
            android:layout_marginStart="100dp"
            android:background="@drawable/custom_progress"
            android:progressDrawable="@drawable/custom_progress" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="110dp"

            >

           <ImageView
               android:layout_width="40dp"
               android:layout_margin="10dp"
               android:layout_height="40dp"
               android:src="@drawable/ic_baseline_call_24"
               android:background="@drawable/button_curve"
               />

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sarim"
                android:background="@drawable/button_curve"
                android:layout_marginStart="30dp"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="QA Engineer"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            />

        <TextView
             android:id="@+id/charger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="Charges INR 800000 Per Annum"
            android:textColor="#6c706f"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/prelocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="Prefer within indore,Madhay Pradesh,India"
            android:textColor="#6c706f"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Applying for  "
                android:textColor="#6c706f"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/applying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Applying for"
                android:textColor="@color/black"
                android:textStyle="bold"

                />

        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-230dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:background="@color/white"
        android:src="@drawable/admin"/>

</LinearLayout>